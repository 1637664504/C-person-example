## 模板1
import os

env = None
# 1.编译器
if os.system("which clang"):
    env = Environment()
else:
    # clang编译器
    env = Environment(tools=["default", "clang"])
    env["CC"] = ["clang"]
    env["CXX"] = ["clang++"]

env["PROGSUFFIX"] = ".out"            # 可执行后缀.out
env["CCFLAGS"] = " -ggdb3 -O0 -Wall"  # gdb 调试开关
src_list = [
    "2_printf_打印2_8_10_16进制.c",
    # "7_ftell_获取当前文件位置.c",
    "7.1_ftell_获取文件大小.c",
]

for src in src_list:
    env.Program(Split(src))